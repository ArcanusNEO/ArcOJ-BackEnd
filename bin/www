#!/usr/bin/env node

let app = require('../app')
let http = require('http')

let httpServer = http.createServer()
let port = 3000

; (async () => {
  app.set('port', port)
  httpServer.on('request', app)
  httpServer.listen(port)
  httpServer.on('listening', () => {
    console.log(`Listening on http://localhost:${port}`)
  })
})()

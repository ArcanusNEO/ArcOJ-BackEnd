#!/usr/bin/env node

const app = require('../app')
const http = require('http')

const httpServer = http.createServer()
const port = 3000

  ; (async () => {
    app.set('port', port)
    httpServer.on('request', app)
    httpServer.listen(port)
    httpServer.on('listening', () => {
      console.log(`Listening on http://localhost:${port}`)
    })
  })()
